<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <%= link_to 'Delete', destroy_path(task), method: 'delete', data: { confirm: 'you sure ?' } %>
    <%= link_to 'Update', edit_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to 'Create Task', new_path %>
